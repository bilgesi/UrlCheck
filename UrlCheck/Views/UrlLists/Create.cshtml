@model UrlCheck.Models.UrlList

@{
    ViewData["Title"] = "Create";
}

<h1>Create Url</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label>Name</label>
                <input name="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>Url</label>
                <input name="Url" class="form-control" placeholder="https://www.örneksite.com/" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input name="Email" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
