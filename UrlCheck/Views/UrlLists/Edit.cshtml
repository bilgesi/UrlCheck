@model UrlCheck.Models.UrlList

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>UrlList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input name="Id" value="@Model.Id" style="display:none"/>
            <input name="CreatedUserEmail" value="@Model.CreatedUserEmail" style="display:none" />
            <input name="CreatedDate" value="@Model.CreatedDate" style="display:none" />

            <div class="form-group">
                <label>Name</label>
                <input name="Name" class="form-control" value="@Model.Name"/>
            </div>
            <div class="form-group">
                <label>Url</label>
                <input name="Url" class="form-control" value="@Model.Url" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input name="Email" class="form-control" value="@Model.Email" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
